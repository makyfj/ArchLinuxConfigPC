# vim: filetype=i3config

# This config file will use environment variables such as $BROWSER and $bar1TERMINAL.

# polybar launch script
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Windows compositor
exec_always --no-startup-id picom -b

# Autotiling
exec_always --no-startup-id autotiling

#./image1.jpg status bar
# bar {
#   position top
#   status_command i3status
# }

# Display Wallpaper
exec_always feh --bg-fill /home/maky/Pictures/Wallpapers/flowerhouse.jpg
#
# #---Basic Definitions---# #
smart_gaps on
smart_borders on
set $inner_gaps 5
set $outer_gaps -2
set $term --no-startup-id alacritty
set $mod Mod4
set $alt Mod1
set $shutdown sudo -A shutdown -h now
set $reboot sudo -A reboot
set $netrefresh --no-startup-id sudo -A systemctl restart NetworkManager
set $lock betterlockscreen -l dim
set $suspend sudo systemctl suspend
set $hibernate sudo -A systemctl hibernate
set $timeshift sudo timeshift-gtk

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# #---Gaps---# #
for_window [class="^.*"] border pixel 2
gaps inner $inner_gaps
gaps outer $outer_gaps

# #---Basic Bindings---# #
bindsym $mod+t 		         exec $term
bindsym $mod+Shift+t	       exec $term --working-directory  $(xcwd)

bindsym $mod+Shift+Escape	       exec --no-startup-id $hibernate

# bindsym $mod+BackSpace
# bindsym $mod+Shift+BackSpace	   exec --no-startup-id prompt "Reboot computer?" $reboot

# #---Letter Key Bindings---# #
bindsym $mod+q			            [con_id="__focused__" instance="^(?!dropdown_).*$"] kill
bindsym $mod+Shift+q		        [con_id="__focused__" instance="^(?!dropdown_).*$"] exec --no-startup-id kill -9 `xdotool getwindowfocus getwindowpid`

# w
bindsym $mod+w 			            exec --no-startup-id $timeshift

# e
bindsym $mod+e 			            exec --no-startup-id $lock
bindsym $mod+Shift+e		        exec --no-startup-id $suspend

# r
bindsym $mod+r 			            exec $term -e ranger
bindsym $mod+Shift+r		        exec --no-startup-id winresize

# space
bindsym $mod+space			            exec $term -e ytop
bindsym $mod+Shift+space           focus mode_toggle

# y
bindsym $mod+y			            exec --no-startup-id flameshot gui -p ~/Pictures/Flameshot
bindsym $mod+Shift+y		        exec --no-startup-id flameshot full -p ~/Pictures/Flameshot

# u
bindsym $mod+u                  [urgent=latest] focus

# i
bindsym $mod+i                  fullscreen disable; floating enable; resize set 500 300; sticky enable; move position 4610 1130

# o
bindsym $mod+o			            exec --no-startup-id $term -e nvim ~/Repos/blog/content
# bindsym $mod+Shift			        exec --no-startup-id $term -e nvim ~/Repos

# a
bindsym $mod+a		              exec --no-startup-id pavucontrol
bindsym $mod+Shift+a              exec --no-startup-id firefox

# s
bindsym $mod+s        			    sticky toggle;
bindsym $mod+Shift+s			      split toggle

# d
bindsym $mod+d                  exec --no-startup-id ~/.config/rofi/bin/launcher_colorful

# f
bindsym $mod+f			            fullscreen toggle
bindsym $mod+Shift+f 	          floating toggle

# g
bindsym $mod+g		              gaps inner current set $inner_gaps; gaps outer current set $outer_gaps
bindsym $mod+Shift+g		        gaps inner current set 0; gaps outer current set 0

# h
bindsym $mod+h			            focus left
bindsym $mod+Shift+h		        move left 30
bindsym $mod+Ctrl+h		          move workspace to output left

# j
bindsym $mod+j			            focus down
bindsym $mod+Shift+j		        move down 30
bindsym $mod+Ctrl+j		          move workspace to output down

# k
bindsym $mod+k			            focus up
bindsym $mod+Shift+k		        move up 30
bindsym $mod+Ctrl+k		          move workspace to output up

# l
bindsym $mod+l			            focus right
bindsym $mod+Shift+l		        move right 30
bindsym $mod+Ctrl+l		          move workspace to output right

bindsym $mod+semicolon 			    exec --no-startup-id skippy-xd

# z
bindsym $mod+z			            exec --no-startup-id $term -e nvim ~/.zshrc

# x
bindsym $mod+x 			            exec --no-startup-id $reboot
bindsym $mod+Shift+x		        exec --no-startup-id $shutdown

# c
bindsym $mod+c			           exec --no-startup-id picom -b
bindsym $mod+Shift+c		        exec --no-startup-id killall picom

# v
bindsym $mod+v			            exec --no-startup-id $term -e nvim
bindsym $mod+Shift+v				exec --no-startup-id brave

# b
bindsym $mod+b			            exec --no-startup-id feh --bg-fill --randomize ~/Pictures/Wallpapers/*

# n
bindsym $mod+n			            exec --no-startup-id nautilus

# m
bindsym $mod+m		              exec --no-startup-id spotify
bindsym $mod+Shift+m		        exec --no-startup-id discord


# #---Workspace Bindings---# #
bindsym $mod+Tab		            exec --no-startup-id rofi -show window
bindsym $mod+Shift+Tab		      workspace next
bindsym $mod+apostrophe		      split horizontal ;; exec $term
bindsym $mod+slash		          split vertical ;; exec $term
bindsym $mod+Shift+slash	      kill
bindsym $mod+backslash		      workspace back_and_forth

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Assign Workspaces:
assign [class="discord"] $ws4

# Assing autofloat
for_window [title=".*Emulator.*"] floating enable

# switch to workspace
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1	move container to workspace $ws1
bindsym $mod+Shift+2	move container to workspace $ws2
bindsym $mod+Shift+3	move container to workspace $ws3
bindsym $mod+Shift+4	move container to workspace $ws4
bindsym $mod+Shift+5	move container to workspace $ws5
bindsym $mod+Shift+6	move container to workspace $ws6
bindsym $mod+Shift+7	move container to workspace $ws7
bindsym $mod+Shift+8	move container to workspace $ws8
bindsym $mod+Shift+9	move container to workspace $ws9
bindsym $mod+Shift+0	move container to workspace $ws10

for_window [title="GIMP Startup"] move workspace $ws5
for_window [class="Gimp"] move workspace $ws5
for_window [window_role="GtkFileChooserDialog"] resize set 800 600
for_window [window_role="GtkFileChooserDialog"] move position center


# #---Function Buttons---# #
bindsym $mod+F1		        restart
bindsym $mod+F2		        exec --no-startup-id screenkey -s small --scr 1
bindsym $mod+F3	          exec --no-startup-id killall screenkey
bindsym $mod+F12	        exec $term -e nmtui

# #---Arrow Keys---# #
bindsym $mod+Left		      focus left
bindsym $mod+Shift+Left   resize shrink width 5 px or 5 ppt
bindsym $mod+Ctrl+Left		move workspace to output right
bindsym $mod+Down		      focus down
bindsym $mod+Shift+Down   resize shrink height 5 px or 5 ppt
bindsym $mod+Ctrl+Down		move workspace to output up
bindsym $mod+Up			      focus up
bindsym $mod+Shift+Up     resize grow height 5 px or 5 ppt
bindsym $mod+Ctrl+Up		  move workspace to output down
bindsym $mod+Right 		    focus right
bindsym $mod+Shift+Right  resize grow width 5 px or 5 ppt
bindsym $mod+Ctrl+Right		move workspace to output left

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% #decrease sound volume
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Window borders
set $bgcolor    #00897b33
set $ibgcolor   #363636
set $fws        #00897b80
set $barcolor   #00897b0D
set $textcolor  #ffffff
set $ubcolor    #ff0000
set $itextcolor #969696

#                       border      background      text        indicator
client.focused          $bgcolor    $bgcolor        $textcolor  $bgcolor
client.unfocused        $ibgcolor   $ibgcolor       $textcolor  $ibgcolor
client.focused_inactive $ibgcolor   $ibgcolor       $itextcolor  $ibgcolor
client.urgent           $ubcolor    $ubcolor        $textcolor  $ubcolor 
